datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


/* =========================
   ENUMS
========================= */

enum Role {
  SUPER_ADMIN
  OWNER
  TRAINER
  STAFF
  MEMBER
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum PaymentMode {
  CASH
  UPI
  CARD
  ONLINE
}

enum SubscriptionPlan {
  FREE
  STARTER
  PRO
  ENTERPRISE
}

/* =========================
   MODELS
========================= */

model Gym {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  logo        String?
  address     String?
  phone       String?
  email       String?

  isActive    Boolean  @default(true)
  createdAt  DateTime @default(now())

  users       User[]
  members     Member[]
  plans       MembershipPlan[]
  attendances Attendance[]
  payments    Payment[]
  subscription Subscription?

  @@index([slug])
}

model User {
  id        String   @id @default(uuid())
  gymId     String
  gym       Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)

  name      String
  email     String   @unique
  password  String
  role      Role

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  member    Member?

  @@index([gymId])
  @@index([role])
}

model Member {
  id          String   @id @default(uuid())
  gymId       String
  gym         Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)

  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  planId      String?
  plan        MembershipPlan? @relation(fields: [planId], references: [id])

  startDate   DateTime
  expiryDate  DateTime
  status      String

  height      Float?
  weight      Float?
  bodyFat     Float?

  attendances Attendance[]
  payments    Payment[]

  createdAt   DateTime @default(now())

  @@index([gymId])
  @@index([expiryDate])
}

model MembershipPlan {
  id        String   @id @default(uuid())
  gymId     String
  gym       Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)

  name      String
  price     Int
  duration  Int        // days
  isActive  Boolean    @default(true)

  members   Member[]

  createdAt DateTime @default(now())

  @@index([gymId])
}

model Attendance {
  id        String   @id @default(uuid())
  gymId     String
  gym       Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)

  memberId  String
  member    Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)

  date      DateTime
  checkIn   DateTime

  @@index([gymId])
  @@index([memberId])
  @@unique([memberId, date])
}

model Payment {
  id        String   @id @default(uuid())
  gymId     String
  gym       Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)

  memberId  String
  member    Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)

  amount    Int
  mode      PaymentMode
  status    PaymentStatus
  reference String?

  createdAt DateTime @default(now())

  @@index([gymId])
  @@index([memberId])
}

model Subscription {
  id        String   @id @default(uuid())
  gymId     String   @unique
  gym       Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)

  plan      SubscriptionPlan
  startDate DateTime
  endDate   DateTime
  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
}
